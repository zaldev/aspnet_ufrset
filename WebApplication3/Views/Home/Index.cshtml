                    <a class="btn bg-info" asp-area="" asp-controller="Home" asp-action="Filieres">Voir +</a>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Departements (@Model.Item1.ToList().Count)</h5>
                    <p class="card-text">Les departements de l'UFR SET</p>
                    <a class="btn bg-info" asp-area="" asp-controller="Home" asp-action="Departements">Voir +</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Services (@Model.Item4.ToList().Count)</h5>
                    <p class="card-text">Les services de l'UFR SET</p>
                    <a class="btn bg-info" asp-area="" asp-controller="Home" asp-action="Services">Voir +</a>
                </div>
            </div>
        </div>

    </div>
</div>